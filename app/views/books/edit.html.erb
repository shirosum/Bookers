			<div class="col-md-6 col-md-offset-3">
			  <h2>Editing Book</h2>
				<%= form_for(@book) do |f| %>
				  <% if @book.errors.any? %>
					<div id="error_explanation">
				      <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
				      <ul>
				      	<% @book.errors.full_messages.each do |message| %>
				      	<li><%= message %></li>
				      	<% end %>
				      </ul>
				    </div>
				  <% end %>
				  <div class="field row">
				  <label class="book_titile">Title</label>
				  <%= f.text_field :title, class: "book_title col-xs-12" %>
				  </div>
				  <div class="field row">
				  <label class="book_body">Opinion</label>
				  <%= f.text_area :body, class: "book_body col-xs-12" %>
				  </div>
				  <div class="actions row">
				  <%= f.submit "Update Book", class: "update_book_#{@book.id} col-xs-12 btn btn-primary" %>
				  </div>
				<% end %>
				  <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
				  |
				  <%= link_to "Back", '/books', class: "back" %>
			</div>