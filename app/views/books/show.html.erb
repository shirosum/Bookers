<%= render 'users/userinfo', user:@book.user, book:@bookn %>

				<div class="col-xs-9">
					<h2 class="">Book detail</h2>
					<table class="table">
						<tbody>
							<tr>
								<td><%= attachment_image_tag @book.user, :image, size: "40x40", format: "jpeg", fallback: "no_image.jpg" %></td>
								<td><%= link_to @book.title, book_path(@book.id), class: "book_#{@book.id}" %></td>
								<td><%= @book.body %></td>
								<% if @book.user_id == current_user.id %>
								 <td><%= link_to "Edit", edit_book_path(@book.id), class: "edit_book_#{@book.id} btn-sm btn-success" %></td>
								 <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class: "destroy_book_#{@book.id} btn-sm btn-danger" %></td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</div>