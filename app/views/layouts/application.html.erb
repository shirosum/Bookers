<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
           <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to "  Home", user_path(current_user.id), class: "home glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to "  Users", '/users', class: "users glyphicon glyphicon-user"  %>
              </li>
              <li class="">
                <%= link_to "  Books", '/books', class: "books glyphicon glyphicon-book" %>
              </li>
              <li class="">
                <%= link_to "  logout", destroy_user_session_path, method: :delete, class: "logout glyphicon glyphicon-log-out" %>
              </li>
            <% else %>
              <li class="">
                <%= link_to "  Home", '/', class: "home glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to "  About", '/about', class: "about glyphicon glyphicon-link" %>
              </li>
              <li class="">
                <%= link_to "  signup", '/users/sign_up', class: "sign_up glyphicon glyphicon-edit" %>
              </li>
              <li class="">
                <%= link_to "  login", '/users/sign_in', class: "sign_in glyphicon glyphicon-log-in" %>
              </li>
            <% end %>
           </ul>
        </nav>
      </div>
    </header>

<section class="body">
  <div class="container">
    <div class="row">

        <div class="row">
          <div class="col-xs-3">
            <% if flash[:notice] %>
            <p class="notice"><%= flash[:notice] %></p>
            <% end %>
          </div>
        </div>

    <%= yield %>

    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <div class="footer pull-right">
          <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </div>

    </div>
  </div>
</section>
  </body>
</html>